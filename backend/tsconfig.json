{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "outDir": "./dist",
        "rootDir": "./",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        // "target": "es6",
        "target": "esnext",
        "strict": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./"
    ]
}